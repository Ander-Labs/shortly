---
import {Image} from "astro:assets";

const title: string = "More than just shorter links";
const body: string =
  "Build your brand's recognition and get detailed insights on how your links are performing.";
const btn: string = "Get Started";
const link: string = "/";
---

<section>
  <div class="md:pl-4 md:pb-8">
    <div class="grid grid-cols-1 lg:grid-cols-2">
      <figure
        class="relative h-60 sm:h-96 md:h-full overflow-hidden lg:order-last"
      >
        <Image
          alt=""
          src="/images/illustration-working.svg"
          width={500}
          height={500}
          class="absolute inset-y-0 right-0 md:h-full md:w-full object-cover"
        />
      </figure>

      <div class="lg:py-24 lg:pl-32 z-0">
        <h2
          class="md:text-6xl font-bold text-5xl text-center lg:text-start sm:mx-2"
        >
          {title}
        </h2>

        <p
          class="mt-4 text-gray-600 md:text-2xl md:mr-10 text-center lg:text-start sm:mx-2"
        >
          {body}
        </p>

        <div class="w-full flex justify-center lg:justify-start mb-16 md:mb-4">
          <a
            href={link}
            class="mt-8 inline-block bg-cyan-400 px-12 py-3 font-medium text-white transition hover:bg-cyan-500 focus:outline-none focus:ring focus:ring-yellow-400 rounded-full md:text-xl"
          >
            {btn}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
