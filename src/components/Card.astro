---
import { Image } from "astro:assets";

interface Props {
  img: string;
  title: string;
  body: string;
}

const { img, title, body } = Astro.props;


---

<div class="w-96 rounded-lg">
  <div class="relative pb-10">
  <div
    class=" absolute z-40 ml-6 w-20 h-20 rounded-full bg-purple-950 flex justify-center items-center "
  >
    <figure class="">
      <Image src={img} alt={title} width={50} height={50} />
    </figure>
  </div>
</div>
  <div
    class=" flex flex-col justify-center flex-1 p-8 lg:p-6 bg-white w-96 h-64 rounded-lg py-6 lg:py-4 shadow-lg shadow-zinc-300"
  >
    <h3 class="text-xl font-bold">
      {title}
    </h3>
    <p class="text-gray-600">
      {body}
    </p>
  </div>
</div>
